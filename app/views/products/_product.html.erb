<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-lg-3 text-center">
    	<a href="#"><h3><%= product.name %></h3></a>
    	<%= image_tag(product.image_url, class: "img-responsive center-block") %>  
    	<p><%= product.description %></p>
    	<p><%= product.condition %></p>
    	<p><%= product.colour %></p>
    	<strong>$<%= product.price %></strong><br><br><br>
     	<p><%= link_to 'Show', product %></p>
    	<p><%= link_to 'Edit', edit_product_path(product) %></p>
    	<p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- /col -->
  </div>
</div>


